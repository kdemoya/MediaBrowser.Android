<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#10aaff"
                android:endColor="#00bbff"
                android:angle="270" />
            <padding
                android:left="2dp"
                android:right="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#40ffffff"
                android:endColor="#20ffffff"
                android:angle="270" />
            <padding
                android:left="2dp"
                android:right="2dp" />
        </shape>
    </item>
</selector>