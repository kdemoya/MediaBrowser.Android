<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="because you watched"
        android:textSize="40sp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3">

        <include layout="@layout/widget_homescreen_group_item"
            android:layout_width="540dp"
            android:layout_height="360dp"
            android:id="@+id/hgi_item_1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2" />

        <include layout="@layout/widget_homescreen_group_item"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:id="@+id/hgi_item_2"
            android:layout_column="2"
            android:src="@drawable/dummy_album_art_large" />

        <include layout="@layout/widget_homescreen_group_item"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:id="@+id/hgi_item_3"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@drawable/dummy_album_art_large" />

        <include layout="@layout/widget_homescreen_group_item"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:id="@+id/hgi_item_4"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@drawable/dummy_album_art_large" />

        <include layout="@layout/widget_homescreen_group_item"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:id="@+id/hgi_item_5"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/dummy_album_art_large" />

        <include layout="@layout/widget_homescreen_group_item"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:id="@+id/hgi_item_6"
            android:layout_column="2"
            android:layout_row="2"
            android:src="@drawable/dummy_album_art_large" />
    </GridLayout>
</LinearLayout>