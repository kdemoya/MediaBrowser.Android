<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnPlay"
            android:text="queue"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tvSongRuntime"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="0:00"
            android:textSize="20sp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tvSongIndexNumber"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btnQueue"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|right"
            android:text="1"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvSongIndexNumber"
            android:layout_toLeftOf="@id/tvSongRuntime"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical"
            android:text="blah"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </RelativeLayout>

</LinearLayout>