<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/grid_item_outer_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30bbbbbb"
        android:padding="@dimen/grid_item_inner_padding">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ivActorImage"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:maxHeight="120dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvActorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivActorImage"
            android:fontFamily="sans-serif-condensed"
            android:text="ActorName"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvActorRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvActorName"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivActorImage"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>